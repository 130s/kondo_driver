<launch>
  <!-- Load Kondo ICS parameters -->
  <rosparam file="$(find kondo_driver)/config/motor_joint_mapping_sample.yaml" command="load"/>
  <!-- Start ICS driver -->
  <node name="kondo_driver" pkg="kondo_driver" type="kondo_ics_driver" output="screen" />
  
  <!-- Load URDF model -->
  <param name="robot_description" command="cat $(find kondo_driver)/urdf/sample.urdf" />

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find kondo_driver)/config/controller_sample.yaml" command="load"/>

  <!-- Load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner"
	respawn="false" output="screen" args="joint_state_controller joint_0_controller joint_1_controller"/>

  <!-- Robot state publisher -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen" />

</launch>